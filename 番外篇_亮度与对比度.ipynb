     "output_type": "execute_result"
    }
   ],
   "source": [
    "import cv2\n",
    "import numpy as np\n",
    "\n",
    "img = cv2.imread('pink_wwd.jpg')\n",
    "\n",
    "res = np.uint8(np.clip((1.5 * img + 10), 0, 255))\n",
    "tmp = np.hstack((img, res)) # 两张图横向合并\n",
    "\n",
    "cv2.imshow('img', tmp)\n",
    "cv2.waitKey(0)"
   ]
